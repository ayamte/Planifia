<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Couche de base semi-transparente pour l'effet de flou -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" /> <!-- Blanc semi-transparent (50%) -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Couche supÃ©rieure encore plus transparente -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:startColor="#60FFFFFF"
                android:centerColor="#40FFFFFF"
                android:endColor="#60FFFFFF" />
            <corners android:radius="19dp" />
        </shape>
    </item>
</layer-list>